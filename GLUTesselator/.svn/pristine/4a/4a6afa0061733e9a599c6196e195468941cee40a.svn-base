<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
 
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%p - %C{1}.%M(%L) | %m%n"/>
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.FileAppender">
    	<!-- Datei vor jedem Start leeren  -->
    	<param name="append" value="false" />
		<param name="File" value="ressource/logging.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
           		value="%d{dd MMM yyyy HH:mm:ss} %p - %C{1}.%M(%L) | %m%n"/>
        </layout>
    </appender>

	<logger name="glutesselator">
		 <level value="DEBUG" />
	</logger>
	<!-- 
	<logger name="glutesselator.tesselationservice.tesselationservice">
		 <level value="DEBUG" />
	</logger>
	
	<logger name="glutesselator.tesselationmodel.drawingtype">
		 <level value="DEBUG" />
	</logger>
	-->
	
    <root>
        <level value="ERROR"/>
        <!-- <appender-ref ref="FILE"/> -->
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>
